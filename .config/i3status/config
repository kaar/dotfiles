# order += "ipv6"
order += "read_file perf_mode"
order += "cpu_usage"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

read_file perf_mode {
        path = "/sys/firmware/acpi/platform_profile"
}

